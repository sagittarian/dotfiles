export PDCONFIG=/home/adam/src/configs/adampoc.yaml
export PDCONFIGDIR=$(dirname $PDCONFIG)
function pdcfg () {
    if [ $# -eq 0 ]; then
        cat $PDCONFIGDIR/current
    else
        echo $PDCONFIGDIR/$1
    fi
}

function setpdcfg {
    echo $PDCONFIGDIR/$1 > $PDCONFIGDIR/current
}

